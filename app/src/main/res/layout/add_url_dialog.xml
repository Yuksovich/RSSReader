<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/addUrlDialog"
              android:textStyle="bold"
              android:textAppearance="?android:attr/textAppearanceLarge"
              android:background="@color/addNewUrlTitleBackground"
              android:padding="@dimen/titleInAddUrlPadding"/>

    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/urlInput"
              android:text="@string/httpInput"
              android:padding="@dimen/inputUrlPadding"
              android:layout_marginTop="@dimen/inputUrlMarginTop"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addUrlButton"
                android:text="@string/checkUrl"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/inputUrlMarginBottom"
                android:background="@color/checkUrlButtonColor"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/removeUrlButton"
                android:text="@string/checkUrl"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/inputUrlMarginBottom"
                android:background="@color/checkUrlButtonColor"/>
    </LinearLayout>

</LinearLayout>
