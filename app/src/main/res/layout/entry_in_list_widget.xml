<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rss_entry_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/widget_list_background"
        android:paddingLeft="@dimen/text_padding_left_right"
        android:paddingRight="@dimen/text_padding_left_right"
        android:paddingBottom="@dimen/text_padding_top_bottom"
        android:paddingTop="@dimen/text_padding_top_bottom">

    <TextView
            android:id="@+id/item_title_listView_entry_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textColor="@android:color/white"
    />
    <TextView
            android:id="@+id/item_pubDate_listView_entry_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@android:color/white"
    />
    <TextView
            android:id="@+id/channel_title_listView_entry_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@android:color/white"
    />
</LinearLayout>
