<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="yuriy.rssreader.ui.SingleRssView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <TextView android:id="@+id/item_title_show"
                  style="@style/AppTheme.rss_view.item_title"/>

        <TextView android:id="@+id/item_pubDate_show"
                  style="@style/AppTheme.rss_view"/>

        <TextView android:id="@+id/channel_title_show"
                  style="@style/AppTheme.rss_view.channel_title"/>

        <TextView android:id="@+id/channel_description_show"
                  style="@style/AppTheme.rss_view"/>

        <WebView android:id="@+id/item_descriprion_show"
                 style="@style/AppTheme.rss_view"/>


    </LinearLayout>
</ScrollView>
