<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_actionbar"
        android:layout_width="match_parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="?android:actionBarSize"
        android:background="@color/toolbar_color">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <ImageButton
                android:id="@+id/settingsButton_toolbar"
                android:src="@color/toolbar_settings_button_selector"
                android:contentDescription="@string/settings_toolbar"
                style="@style/AppTheme.toolbar"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                />
        <ImageButton
                android:id="@+id/filterButton_toolbar"
                android:src="@color/toolbar_filter_button_selector"
                android:contentDescription="@string/filter_toolbar"
                style="@style/AppTheme.toolbar"
                android:layout_toLeftOf="@+id/addUrlButton_toolbar"
                android:layout_toStartOf="@+id/addUrlButton_toolbar"/>
        <ImageButton
                android:id="@+id/addUrlButton_toolbar"
                android:src="@color/toolbar_add_button_selector"
                android:contentDescription="@string/add_url_toolbar"
                style="@style/AppTheme.toolbar"
                android:layout_toLeftOf="@+id/refreshButton_toolbar"
                android:layout_toStartOf="@+id/refreshButton_toolbar"
        />
        <ImageButton
                android:id="@+id/refreshButton_toolbar"
                android:src="@color/toolbar_refresh_button_selector"
                android:contentDescription="@string/refresh_toolbar"
                style="@style/AppTheme.toolbar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
        />

    </RelativeLayout>
</android.support.v7.widget.Toolbar>

